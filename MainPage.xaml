<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathApp.MainPage">

    <StackLayout>
        <Label Text="Número 1:" FontAttributes="Bold" FontSize="Medium" />
        <Entry x:Name="num1Entry" />
        <Label Text="Número 2:" FontAttributes="Bold" FontSize="Medium" />
        <Entry x:Name="num2Entry" />
        <Button x:Name="sumButton" Text="Suma" Clicked="SumButton_Clicked" BackgroundColor="#ADD8E6" TextColor="Black" Margin="0,10,0,10" WidthRequest="150" />
        <Button x:Name="subButton" Text="Resta" Clicked="SubButton_Clicked" BackgroundColor="#ADD8E6" TextColor="Black" Margin="0,10,0,10" WidthRequest="150" />
        <Button x:Name="mulButton" Text="Multiplicación" Clicked="MulButton_Clicked" BackgroundColor="#ADD8E6" TextColor="Black" Margin="0,10,0,10" WidthRequest="150" />
        <Button x:Name="divButton" Text="División" Clicked="DivButton_Clicked" BackgroundColor="#ADD8E6" TextColor="Black" Margin="0,10,0,10" WidthRequest="150" />
        <Label x:Name="resultLabel" Text="Resultado:" />
    </StackLayout>

</ContentPage>